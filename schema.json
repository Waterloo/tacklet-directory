{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "version", "url", "description", "icon"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the widget"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500
    },
    "icon": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://"
    }
  }
}
